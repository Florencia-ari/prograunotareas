Algoritmo eje7
	// Maria Florencia Ariaga Chiroy
	// 9959-23-6741
	Escribir 'Escribir un programa que calcule el perimetro y area de un circulo dado su radio';
	Definir radio,perimetro,area Como Real;
	Definir p Como Real;
	p <- 3.1416;
	Escribir 'Ingrese el radio del círculo:';
	Leer radio;
	perimetro <- 2*p*radio;
	area <- p*radio*radio;
	Escribir 'El perímetro del círculo es: ',perimetro;
	Escribir 'El área del círculo es: ',area;
FinAlgoritmo
